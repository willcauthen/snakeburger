<!DOCTYPE html>
	<html>
	<head>
	  <title>Snakeburger</title>
	  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
		  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
		  <link href='https://fonts.googleapis.com/css?family=Indie+Flower' rel='stylesheet' type='text/css'>
	</head>
	<body>
		<div class="row">
			<div class="col-sm-6 col-sm-offset-3">
				<div class="snake-head"> 
					<hr>
					<h1> SNAKEBURGER </h1>
					<h3>Welcome to the world premier of our famous snake burgers.</h3>
					<hr>
				</div>
			</div>
		</div>
		<div class="row visible-xs snakenav">
			<div class="dropdown">
				<button class="btn btn-info dropdown-toggle col-xs-12" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
					<span class="glyphicon glyphicon-th-list" ></span> More
					<span class="caret"></span>
				</button>
				<ul class="dropdown-menu col-xs-12" >
					<li>
						<%= link_to "Home", root_path %>
					</li>
					<li>
						<%= link_to "About (under construction)", about_path %>
					</li>
					<li>
						<%= link_to "Menu", root_path %>
					</li>
					<li role="separator" class="divider"></li>
					<li>
						<%= link_to "Careers", root_path %>
					</li>
				</ul>
			</div>
		</div>
		<div class="row hidden-xs">
			<ul class="nav nav-tabs ">
				<li class="col-sm-2 col-sm-offset-1">
					<%= link_to "Home", root_path %>
				</li>
				<li class="col-sm-2 col-sm-offset-1">
					<%= link_to "The Team", about_path %>
				</li>
				<li class="col-sm-2 col-sm-offset-1">
					<%= link_to "The Menu", root_path %>
				</li>
				<li class="col-sm-2 col-sm-offset-1">
					<%= link_to "Careers", root_path %>
				</li>
			</ul>
		</div>

		<%= yield %>
	</body>
</html>
