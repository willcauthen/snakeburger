<!DOCTYPE html>
	<html>
	<head>
	  <title>Snakeburger</title>
	  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
		  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
		  <link href='https://fonts.googleapis.com/css?family=Indie+Flower' rel='stylesheet' type='text/css'>
	</head>
	<body>
		<div class="row">
			<ul class="nav nav-tabs hidden-xs">
				<li class="col-xs-3">
					<%= link_to " Home ", root_path %>
				</li>
				<li class="col-xs-3">
					<%= link_to "Meet the Team", about_path %>
				</li>
				<li class="col-xs-3">
					<%= link_to "Menu (under construction)", root_path %>
				</li>
				<li class="col-xs-3">
					<%= link_to " Careers (same)", root_path %>
				</li>
			</ul>
		</div>
		<div class="row visible-xs">
			<div class="jumbotron col-xs-10 col-xs-offset-1">
				<p>NICE Xtra small device!</p>
				<div class="dropdown">
					<button class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
						<span class="glyphicon glyphicon-th-list" ></span> More
						<span class="caret"></span>
					</button>
					<ul class="dropdown-menu" >
						<li>
							<%= link_to "Home", root_path %>
						</li>
						<li>
							<%= link_to "About (under construction)", about_path %>
						</li>
						<li>
							<%= link_to "Menu", root_path %>
						</li>
						<li role="separator" class="divider"></li>
						<li>
							<%= link_to "Careers", root_path %>
						</li>
					</ul>
				</div>
			</div>
		</div>

		<%= yield %>
	</body>
</html>
